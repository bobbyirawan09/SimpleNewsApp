<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph_home"
    app:startDestination="@+id/news">

    <fragment
        android:id="@+id/news"
        android:name="bobby.irawan.simplenewsapp.presentation.view.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_news_to_about_me"
            app:destination="@id/about_me" />
    </fragment>

    <fragment
        android:id="@+id/about_me"
        android:name="bobby.irawan.simplenewsapp.presentation.view.AboutMeFragment"
        android:label="fragment_about_me"
        tools:layout="@layout/fragment_about_me">
        <action
            android:id="@+id/action_about_me_to_news"
            app:destination="@id/news" />
    </fragment>


</navigation>